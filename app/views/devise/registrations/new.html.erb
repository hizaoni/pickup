<div class="user_main">
  <%= render partial: 'layouts/sidebar'%>
  <div class="user_sub">
    <div class="subtitle">
          管理者
    </div>
    <div class="form_title">
        新規登録
    </div>
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form_area">
          <div class="separate">
            <div class="field">
              <%= f.label :"氏名", class: "form_label"  %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"メールアドレス", class: "form_label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"所属", class: "form_label" %><br />
              <%= f.text_field :division, autofocus: true, autocomplete: "division", class:"form_text" %>
            </div>
          </div>
          <div class="separate">
            <div class="field">
              <%= f.label :"パスワード", class: "form_label" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"パスワード（確認用）", class: "form_label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form_text" %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "user_new_submit" %>
        </div>
      
       <% end %>

    </div>
  </div>
</div>
