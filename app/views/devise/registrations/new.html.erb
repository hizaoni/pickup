<div class="user_main">
  <%= render partial: 'layouts/sidebar'%>
  <div class="user_sub">
    <div class="subtitle">
          管理者 新規登録
    </div>
    <div class="user_resi_error">
          <%= render "devise/shared/error_messages", resource: resource %>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       
          
        <div class="form_area">
          <div class="separate">
            <div class="field">
              <%= f.label :"氏名（全角）", class: "form_label"  %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"メールアドレス", class: "form_label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"所属", class: "form_label" %><br />
              <%= f.text_field :division, autofocus: true, autocomplete: "division", class:"form_text" %>
            </div>
          </div>
          <div class="separate">
            <div class="field">
              <%= f.label :"パスワード", class: "form_label" %>
              <% if @minimum_password_length %>
              <em class="form_label">(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form_text" %>
            </div>

            <div class="field">
              <%= f.label :"パスワード（確認用）", class: "form_label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form_text" %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "新規登録", class: "user_new_submit" %>
        </div>
      
       <% end %>

    </div>
  </div>
</div>
